<% title "Index" %>

<div class="row">
  <div class="col-md-12">
    <%= search_form_for [:admin, @search]  do |f| %>
      <%= f.condition_fields do |c| %>
        <div class="frm-group">
          <%= c.attribute_fields do |a| %>
            <%= a.attribute_select %>
          <% end %>
          <%= c.predicate_select %>
          <%= c.value_fields do |v| %>
            <%= v.text_field :value %>
          <% end %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Search" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="box">
      <div class="box-header">
        <%= fa_icon "phone" %>
        <h3 class="box-title">
          Telephony This Week
        </h3>
      </div>
      <div class="box-body no-pad">
        <%= content_tag :div, nil, :class => "chart", :data => { "visuals": "chart", "with_date": true, "chart": telephony_week_charts_path } %>
      </div>
    </div>
  </div>
</div>
