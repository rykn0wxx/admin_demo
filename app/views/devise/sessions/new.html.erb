<% title "Login", false %>

<%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal"}  do |f| %>
  <div class="login-block">
    <div class="block">
      <div class="login-logo">
        <%= link_to root_path do %>
          <b>mud</b>head
        <% end %>
      </div>
      <div class="content">
        <div class="form-row">
          <div class="col-md-12">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="material-icons">person_outline</i>
              </span>
              <%= f.text_field :login, required: true, autofocus: true, :class => "form-control input-sm", :placeholder => "Login" %>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-12">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="material-icons">lock</i>
              </span>
              <%= f.password_field :password, required: true, :class => "form-control input-sm", :placeholder => "Password" %>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="col-md-6">
            <%= link_to "Register", new_registration_path(resource_name), :class => "btn btn-sm btn-clean", :data => { turbolinks: false } %>
          </div>
          <div class="col-md-6">
            <%= f.button :submit, "Log in", :class => "btn btn-sm btn-clean" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
